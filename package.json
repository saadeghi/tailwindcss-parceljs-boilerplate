{
    "private": true,
    "watch": {
        "tailwind": [
            "src/*.html",
            "src/css/style.tailwind.css",
            "src/css/tailwind.config.js"
        ]
    },
    "scripts": {
        "clean": "rm -rf dist .cache",
        "tailwind": "npx tailwindcss build src/css/style.tailwind.css -c src/css/tailwind.config.js -o src/css/style.css",
        "file-watch": "npm-watch",
        "parcel:build": "parcel build src/index.html --public-url ./",
        "parcel:serve": "parcel src/index.html --open",
        "prod": "npm-run-all -s clean tailwind parcel:build",
        "watch": "npm-run-all -s clean -p file-watch parcel:serve"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^2.0.6",
        "npm-watch": "^0.6.0",
        "postcss": "^7.0.27",
        "postcss-cli": "^7.1.0",
        "tailwindcss": "^1.4.1",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "npm-run-all": "^4.1.5"
    }
}
